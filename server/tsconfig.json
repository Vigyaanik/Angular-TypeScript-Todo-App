{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "copyFiles": [
        {
          "from": "src/ormconfig.json",
          "to": "dist/ormconfig.json"
        }
    ]
  }
  